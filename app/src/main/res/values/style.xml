<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="custom_card_view_edit_view" parent="@style/Widget.MaterialComponents.CardView">
    <item name="shapeAppearanceOverlay">@style/shape_appearance_overlay_edit_view_buttons</item>
</style>
    <style name="shape_appearance_overlay_edit_view_buttons" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="boxCornerRadiusTopEnd">17dp</item>
        <item name="boxCornerRadiusTopStart">17dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>

    </style>

    <style name="dialog_edit_text" parent="Widget.Design.TextInputEditText">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
    </style>

    <style name="material_dialog" parent="MaterialAlertDialog.Material3">
         <item name="cornerRadius">15dp</item>
         <item name="background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>

    <style name="reminder_timer_set_button_Style" parent="Base.Widget.AppCompat.Button.Borderless">

        <item name="elevation">0dp</item>
        <item name="iconPadding">8dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:paddingEnd">5dp</item>

    </style>

    <style name="description_string_item_style" parent="Widget.Design.TextInputEditText">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
    </style>
    <style name="description_checkbox_item_style" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="roundedImageViewCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>